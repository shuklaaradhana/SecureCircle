<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.securecircle.ScanInfoActivity$PlaceholderFragment"
    android:background="@color/black" >

	<TextView
	    android:id="@+id/tvRisk"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/tvAppName"
	    android:layout_below="@+id/tvAppName"
	    android:layout_marginTop="42dp"
	    android:textColor="@color/rgreen"
	    android:textStyle="bold"/>

	<TextView
	    android:id="@+id/tvAppName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="111dp"
	    android:textColor="@color/rgreen"
	    android:textStyle="bold" />

	<Button
	    android:id="@+id/doneButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="28dp"
	    android:layout_marginTop="24dp"
	    android:onClick="onClickDone"
	    android:text="@string/done"
	    android:textColor="@color/rgreen"
	    android:textStyle="italic" />

	<Button
	    android:id="@+id/button1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/doneButton"
	    android:layout_marginLeft="24dp"
	    android:layout_toRightOf="@+id/tvAppName"
	    android:onClick="onClickRiskCheck"
	    android:text="@string/riskcheck"
	    android:textColor="@color/rgreen"
	    android:textStyle="italic" />

	<TextView
	    android:id="@+id/tvRiskValue"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/tvRisk"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="77dp"
	    android:textColor="@color/rgreen"
	    android:textStyle="bold" />
    
</RelativeLayout>
